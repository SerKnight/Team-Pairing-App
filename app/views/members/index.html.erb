<h1>Listing members</h1>

<%= link_to 'New Member', new_member_path, class: "button radius" %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Team</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= link_to member.name, member %></td>
        <td><%= member.email %></td>
        <% member.teams.all.each do |team| %>
        <td><%= team.name %></td>
        <% end %>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

